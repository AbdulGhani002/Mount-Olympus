<html>
<head>
    <title>Your Account</title>
    <link rel="stylesheet" href="/styles/main.css">
    <link rel="stylesheet" href="/styles/account.css">
</head>
<body>
    <%- include('nav', {activePage: 'account'}) %>
    <section id="main">
        <h1>User Account: <%= username %></h1>
        <% if (pfp_blob) { %>
            <img src="data:image/png;base64,<%= pfp_blob.toString('base64') %>" alt="Profile Picture" class="profile-pic">
        <% } else { %>
            <img src="https://www.shutterstock.com/shutterstock/photos/1760295569/display_1500/stock-vector-profile-picture-avatar-icon-vector-1760295569.jpg" alt="Default Profile Picture" class="profile-pic">
        <% } %>

        <form action="/updateAccount" method="POST">
            <div class="form-group">
                <label>Aura:</label>
                <input type="text" name="aura" value="<%= aura %>">
            </div>
            <div class="form-group">
                <label>Created At:</label>
                <input type="text" name="created_at" value="<%= created_at || '' %>" disabled>
            </div>
            <div class="form-group">
                <label>Last Paid:</label>
                <input type="text" name="last_paid" value="<%= last_paid || '' %>">
            </div>
            <div class="form-group">
                <label>Email:</label>
                <input type="email" name="email" value="<%= email || '' %>">
            </div>
            <div class="form-group">
                <label>Tags:</label>
                <input type="text" name="tags" value="<%= tags || '' %>">
            </div>
            <div class="form-group">
                <label>About:</label>
                <textarea name="about"><%= about || '' %></textarea>
            </div>
            <div class="form-group">
                <label>Global Discovery:</label>
                <select name="global">
                    <option value="1" <%= global ? 'selected' : '' %>>Yes</option>
                    <option value="0" <%= !global ? 'selected' : '' %>>No</option>
                </select>
            </div>
            <div class="form-group">
                <label>Admin:</label>
                <select name="admin">
                    <option value="1" <%= admin ? 'selected' : '' %>>Yes</option>
                    <option value="0" <%= !admin ? 'selected' : '' %>>No</option>
                </select>
            </div>
            <button type="submit">Update Account</button>
        </form>
    </section>
</body>
</html>
